<div class="jumbotron">
  <h1>All Authors</h1>
</div>

<div class="container">
  <img
  style="display: none;"
  src="https://i.redd.it/ounq1mw5kdxy.gif" />

  <div class="authors">
    <% @authors.each do |author| %>
      <%= render 'author', author: author %>
    <%end%>
  </div>

  <%= link_to 'New author', new_author_path, class: 'btn btn-primary' %>

  <% if @author.errors.any? %>
      <% @author.errors.full_messages.each do |msg| %>
        <div class="row">
          <%= msg %>
        </div>
      <% end %>
  <% end %>

  <br><br>
  <%= form_for @author, remote: true, html: {class: 'new-author'} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter Name"%>
  </div>
  <div class="form-group">
    <%= f.label :surname %>
    <%= f.text_field :surname, class: "form-control", placeholder: "Enter Surname" %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.number_field :age, class: "form-control" %>
  </div>
    <%= f.submit 'Save', class: "btn btn-primary" %>
  <% end %>

</div>
