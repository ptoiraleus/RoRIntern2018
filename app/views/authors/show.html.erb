<div class="jumbotron">
  <h1>Information about the author</h1>
</div>

<div class="container">
  <p class="text">
    Name:
    <%= @author.fullname %>
    <hr/>
    Age:
    <%= @author.age %>
    <hr/>
    Created at:
    <%= @author.created_at %>
    <hr/>
    Updated at:
    <%= @author.updated_at %>
  </p>
  <hr/>
  <%= link_to 'Back to authors', authors_path %>
</div>
