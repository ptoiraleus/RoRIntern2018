
<div data-post-id="<%= post.id %>" class="card w-75" style="margin-bottom: 20px">
	<div class="card-body">
		<div class="card-title"><%= link_to post.title, post_path(id: post.id) %></div>
	  <%= link_to 'Edit', edit_post_path(id: post.id), role: 'button', class: 'btn btn-primary' %>
		<%= link_to 'Delete', post_path(id: post.id), method: :delete, remote: true, data: { confirm: "Are you sure? You will delete #{post.title} pernamently" },  role: 'button', class: 'btn btn-danger' %>
	</div>
</div>
